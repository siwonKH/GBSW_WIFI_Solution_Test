{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tauri-app",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }, "window": {
        "close": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.siwonkh.wifi",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://gist.githubusercontent.com/siwonKH/9b6f06beab81040d56faa6392804a6ab/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY4MUUwODY0NTZFQUYyOTkKUldTWjh1cFdaQWdlK0E4TXk0SVdTd1h1VEFQT1R6bW5xNTBHbFZxSEROTmsvYVBTR1p4TDJ4RjQK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "width": 350,
        "height": 500,
        "title": "tauri-app",
        "hiddenTitle": true,
        "visible": false,
        "decorations": false,
        "transparent": false,
        "focus": false,
        "skipTaskbar": true
      }
    ]
  }
}
